<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/headText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:text="@string/head_text_russian"
        android:textAlignment="center"
        android:textColor="@color/teal_200"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/cityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headText"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="50sp"
        android:backgroundTint="@color/light_grey"
        android:ems="10"
        android:hint="@string/city_name_hint_russian"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:padding="10sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/light_grey"
        android:textSize="18sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/actionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cityName"
        android:layout_marginHorizontal="75sp"
        android:layout_marginTop="25sp"
        android:background="@color/dark_grey"
        android:text="@string/action_button_russian"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/resultsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/actionButton"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="75sp"
        android:layout_marginBottom="25sp"
        android:hint="@string/weather_result_hint_russian"
        android:singleLine="false"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/light_grey"
        android:textSize="20sp" />

</RelativeLayout>